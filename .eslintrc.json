{
    "env": {
        "browser": true,
        "es2021": true
    },
    // inspired by https://knote.dev/post/2020-08-29/duprecated-eslint-plugin-prettier/
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "eslint-config-prettier" // prettier
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "webpack.config.js"
    ],
    "globals": {
        "chrome": true
    },
    "rules": {}
}